{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Energy Consumption", "fontSize": 20,"align": "center"},
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1985,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 145,
      "bind": {
        "input": "range",
        "min": 40,
        "max": 1000,
        "step": 1,
        "name": "Zoom: "
      }
    },
    {
      "name": "pan_hor",
      "value":0,
      "bind":{
        "input":"range",
        "min":-350,
        "max":150,
        "step":1,
        "name":"Pan Horizontally: "
      }
    },
    {
      "name": "pan_ver",
      "value":0,
      "bind":{
        "input":"range",
        "min":-50,
        "max":100,
        "step":1,
        "name":"Pan Vertically: "
      }
    },
    {
      "name": "rotate",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [[0, 0], [60, 0], [-34.8, 0], [-140.0188, 0], [-15.2551, 0]],
        "labels": ["World Default", "America", "Africa", "Oceania", "Europe"],
        "name": "Go to: "
      }
    }
  ],
  "hconcat": [
    {
      "width": 400,
      "height": 300,
      "title": {"text": "Low Carbon Emission Map", "align": "center"},
      "projection": {
        "type": "equalEarth",
        "scale": {"expr": "zoom_level"},
        "rotate": {"expr": "rotate"},
        "center":{"expr":"[pan_hor,pan_ver]"}
      },
      "data": {
        "url": "https://raw.githubusercontent.com/LeonPhillips/Assignment-2-pt2/main/ne_110m%20(1).json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/LeonPhillips/Assignment-2/main/ne_110m%20(1).json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/LeonPhillips/Assignment-2-pt2/main/worldEnergyConsum_USA.csv"
          },
          "transform": [
            {
              "lookup": "country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/LeonPhillips/Assignment-2/main/ne_110m%20(1).json",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {"filter": "datum.year == Year_selection"}
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "low_carbon_share_elec",
              "title": "% Share - Low Carbon Sources",
              "type": "quantitative",
              "scale": {"range": ["#e71010", "#ffff4c"]}
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {
                "field": "low_carbon_share_elec",
                "type": "quantitative",
                "title": "% Share in Low Carbon Sources"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LeonPhillips/Assignment-2-pt2/main/worldEnergyconsum_stacked_bar_3.csv"
      },
      "height":200,
      "width":200,

      "layer":[{

      "mark":"bar",
      "transform": [{"filter": "datum.year == Year_selection"}],
      "encoding": {
        "x": {
          "field": "country",
          "type": "ordinal",
          "title": "Continent/Region"
        },
        "y": {
          "field": "percentage",
          "type": "quantitative",
          "title": "Percentage Energy Consumed"
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {
            "domain": ["coal", "oil", "gas","nuclear", "renewables"],
            "range": ["#e7ba52", "#c7c7c7", "#aec7e8", "#1f77b4", "#9467bd"]
          },
          "title": "Energy type"
        },
        "tooltip": [
          {"field": "type", "type": "nominal", "title": "Energy Type: "},
          {
            "field": "percentage",
            "type": "quantitative",
            "title": "% of Energy Consumed: "
          }
        ]
      }
      },
      {
      "mark":{"type":"text","fontSize":10,"dy":10,"fill":"white"},
      "transform": [
        {"filter": "datum.year == Year_selection"},
        {"filter": "datum.type == 'renewables'"}
        ],
      "encoding":{
        "x":{"field":"country","type":"ordinal","title":"Continent/Region"},
        "y":{"field":"percentage","type":"quantitative","title":"Percentage Energy Consumed"},
        "text":{"field":"percentage","type":"quantitative","format":".2f"}
      }
      }
      ]

  
      
    }
  ],
  "config": {}
}